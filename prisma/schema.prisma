generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// ============================================
// NextAuth.js Required Models
// ============================================

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String     @id @default(cuid())
  name          String?
  email         String?    @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  guesses       Guess[]
  stats         UserStats?
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ============================================
// Card Data Models
// ============================================

model Card {
  id              String  @id @default(cuid())
  name            String
  setCode         String
  collectorNumber String
  colors          String  // JSON array: ["W"], ["U","B"], etc.
  colorIdentity   String  // JSON array for full color identity
  rarity          String  // common, uncommon, rare, mythic
  typeLine        String
  manaCost        String?

  // Scryfall data
  scryfallId    String @unique
  imageUri      String
  imageUriLarge String?

  // 17lands stats
  iihPremier     Float?
  winRatePremier Float?
  gihWrPremier   Float? // Games In Hand Win Rate (opening_hand_win_rate)
  gamesPlayed    Int    @default(0)

  // Filtering flags
  isBasicLand    Boolean @default(false)
  isSpecialGuest Boolean @default(false)

  // Relations
  guessesAsCardA Guess[] @relation("CardA")
  guessesAsCardB Guess[] @relation("CardB")

  // Metadata
  lastSyncedAt DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@unique([setCode, collectorNumber])
  @@index([setCode])
  @@index([iihPremier])
}

model SetMetadata {
  id          String    @id @default(cuid())
  setCode     String    @unique
  setName     String
  releaseDate DateTime
  isSupported Boolean   @default(true)
  cardCount   Int       @default(0)

  lastSyncedAt DateTime?
  syncStatus   String    @default("pending")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// ============================================
// Game State Models
// ============================================

model Guess {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  cardAId String
  cardA   Card   @relation("CardA", fields: [cardAId], references: [id])
  cardBId String
  cardB   Card   @relation("CardB", fields: [cardBId], references: [id])

  setCode String
  format  String // "PremierDraft" or "TradDraft"

  selectedCardId String
  cardAIih       Float
  cardBIih       Float
  iihDifference  Float

  isCorrect Boolean

  createdAt DateTime @default(now())

  @@index([userId])
  @@index([userId, setCode])
  @@index([userId, isCorrect])
  @@index([userId, iihDifference])
}

model UserStats {
  id             String @id @default(cuid())
  userId         String @unique
  user           User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  totalGuesses   Int @default(0)
  correctGuesses Int @default(0)
  currentStreak  Int @default(0)
  bestStreak     Int @default(0)

  setBreakdown    String  @default("{}")
  biggestMissId   String?
  biggestMissDiff Float?

  updatedAt DateTime @updatedAt
}

model DataSyncLog {
  id           String    @id @default(cuid())
  setCode      String
  format       String
  status       String
  cardsAdded   Int       @default(0)
  cardsUpdated Int       @default(0)
  errorMessage String?
  startedAt    DateTime  @default(now())
  completedAt  DateTime?
}
